# Redis Configuration
# Host server Redis (default: localhost)
REDIS_HOST=

# Port server Redis (default: 6379)
REDIS_PORT=

# Database Redis yang digunakan (default: 0)
REDIS_DB=

# Password Redis jika diperlukan (optional)
REDIS_PASSWORD=

# Task Configuration
# Berapa lama task disimpan di Redis dalam detik (default: 3600 = 1 jam)
TASK_EXPIRY=

# Upload Configuration
# Maksimum ukuran file dalam bytes (default: 52428800 = 50MB)
MAX_FILE_SIZE=

# API Configuration
# Host untuk menjalankan API server (default: 0.0.0.0)
API_HOST=

# Port untuk API server (default: 8000)
API_PORT=

# Mode debug untuk development (default: False)
# Set ke 'true' untuk mengaktifkan auto-reload
DEBUG=